class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
        int head=0;
        int tail=0;
        int min_len=INT_MAX;
        int sum=0;

        for(int head=0;head<nums.size();head++){
            sum+=nums[head];

            while(sum>=target){
                min_len=min(min_len,head-tail+1);
                sum-=nums[tail];
                tail++;
            }
        }
        return (min_len == INT_MAX) ? 0 : min_len;
    }
};

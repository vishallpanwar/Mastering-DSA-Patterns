class Solution{   
public:
    void segregate0and1(int A[], int n) {
        
       int left=0;
       int right=n-1;
       
       while(left<right){
           if(A[left]==1){
               swap(A[left],A[right]);
               right--;
           }
           
           else{
               left++;
           }
       }
    }
};
